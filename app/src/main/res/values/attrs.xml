<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DPGText">
        <attr name="fontStyle" format="enum">
            <enum name="regular" value="0" />
            <enum name="light" value="1" />
            <enum name="medium" value="2" />
            <enum name="heavy" value="3" />
        </attr>
        <attr name="fontSize" format="float" />
        <attr name="fontSizeHint" format="float" />
        <attr name="fontSpacing" format="float" />
        <attr name="fontAllCaps" format="boolean" />
        <attr name="fontUnderline" format="boolean" />
    </declare-styleable>
</resources>